{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 80,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,

  // File associations
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100
  },
  "[sql]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // TypeScript settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.inlayHints.enabled": "onUnlessPressed",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.workspaceSymbols.scope": "allOpenProjects",

  // JavaScript settings
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.autoImports": true,
  "javascript.inlayHints.enabled": "onUnlessPressed",

  // ESLint settings
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": false,
  "eslint.run": "onType",
  "eslint.workingDirectories": ["."],

  // Prettier settings
  "prettier.enable": true,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,

  // File explorer settings
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.*.ts,${capture}.d.ts",
    "*.tsx": "${capture}.*.tsx,${capture}.*.ts",
    "*.js": "${capture}.*.js,${capture}.js.map",
    "*.jsx": "${capture}.*.jsx",
    "package.json": "package-lock.json,pnpm-lock.yaml,yarn.lock",
    "tsconfig.json": "tsconfig.*.json",
    ".env": ".env.*",
    "tailwind.config.js": "tailwind.config.*.js,postcss.config.js",
    "next.config.js": "next.config.*.js,next-env.d.ts",
    "README.md": "*.md"
  },

  // Supabase extension settings
  "supabase.showInlineDocumentation": true,
  "supabase.enableAutoCompletion": true,
  "supabase.enableTypeValidation": true,
  "supabase.enableErrorSquiggles": true,
  "supabase.defaultProject": "fleetflow",

  // Git settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.defaultCloneDirectory": "~/Projects",
  "git.useCommitInputAsStashMessage": true,

  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/out": true,
    "**/dist": true,
    "**/build": true,
    "**/.vercel": true,
    "**/coverage": true,
    "**/*.min.js": true,
    "**/*.min.css": true,
    "**/lib/types/supabase-*.ts": true
  },

  // Files settings
  "files.associations": {
    "*.env.*": "dotenv",
    "*.sql": "sql",
    ".prettierrc": "json",
    ".eslintrc": "json"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/out": true,
    "**/.vercel": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/.vercel/**": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Emmet settings
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html",
    "javascript": "html",
    "javascriptreact": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  // Auto-save
  "files.autoSave": "onFocusChange",

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showFunctions": true,

  // Terminal settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'MesloLGS NF', 'Fira Code', monospace",

  // Extensions
  "extensions.autoUpdate": "onlyEnabledExtensions",

  // Workbench settings
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.tabSizing": "fit",

  // Security
  "security.workspace.trust.untrustedFiles": "prompt",

  // Performance
  "typescript.disableAutomaticTypeAcquisition": false,
  "search.maintainFileSearchCache": true,
  "extensions.ignoreRecommendations": false,

  // FleetFlow specific paths
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}",
    "@/components": "${workspaceRoot}/app/components",
    "@/lib": "${workspaceRoot}/lib",
    "@/types": "${workspaceRoot}/lib/types",
    "@/utils": "${workspaceRoot}/app/utils"
  }
}
