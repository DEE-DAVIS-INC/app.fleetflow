# FleetFlow Production Environment Configuration
# Copy this to .env.local for local production testing
# Set these in your deployment platform (Vercel, etc.)

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# Next.js Configuration
NEXTAUTH_SECRET=your_32_character_secret_key_here_change_this
NEXTAUTH_URL=https://your-domain.com

# Square Payment Processing (PRODUCTION)
SQUARE_APPLICATION_ID=your_production_square_app_id
SQUARE_ACCESS_TOKEN=your_production_square_access_token
SQUARE_ENVIRONMENT=production
SQUARE_WEBHOOK_SIGNATURE_KEY=your_square_webhook_signature_key

# API Integrations
ANTHROPIC_API_KEY=your_claude_api_key_for_ai_features
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
FMCSA_API_KEY=7de24c4a0eade12f34685829289e0446daf7880e

# Bill.com Integration (PRODUCTION)
BILL_API_KEY=your_production_bill_com_api_key
BILL_USERNAME=your_production_bill_com_username
BILL_PASSWORD=your_production_bill_com_password
BILL_ORG_ID=your_production_bill_com_org_id
BILL_ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# External APIs
WEATHER_API_KEY=not_required_for_weather_gov
EXCHANGE_RATE_API_KEY=not_required_for_free_tier
SAM_GOV_API_KEY=your_sam_gov_api_key_when_available
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Security & Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info
ENABLE_ANALYTICS=true

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@fleetflowapp.com

# ImprovMX Configuration (for email forwarding management)
IMPROVMX_API_KEY=your_improvmx_api_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_SQUARE_PAYMENTS=true
ENABLE_AI_FEATURES=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CALL_CENTER=false
ENABLE_ADVANCED_ANALYTICS=true

# Rate Limiting
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Logging Configuration
LOG_TO_FILE=true
LOG_TO_DATABASE=true
LOG_TO_EXTERNAL_SERVICE=false
